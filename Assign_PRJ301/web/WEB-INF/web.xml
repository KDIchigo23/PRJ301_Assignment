<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AllStarController</servlet-name>
        <servlet-class>controller.AllStarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayerController</servlet-name>
        <servlet-class>controller.PlayerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterTeamController</servlet-name>
        <servlet-class>controller.FilterTeamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>controller.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterCategoryController</servlet-name>
        <servlet-class>controller.FilterCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterPlayerController</servlet-name>
        <servlet-class>controller.FilterPlayerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>controller.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllStarController</servlet-name>
        <url-pattern>/allstar-controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerController</servlet-name>
        <url-pattern>/player-controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterTeamController</servlet-name>
        <url-pattern>/filter-team</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/product-controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterCategoryController</servlet-name>
        <url-pattern>/filter-category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home-controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login-controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterPlayerController</servlet-name>
        <url-pattern>/filter-player</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
